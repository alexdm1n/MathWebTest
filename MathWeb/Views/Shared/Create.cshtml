@model MathWeb.Models.TaskMath

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskMath</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfTask" class="control-label"></label>
                <input asp-for="NameOfTask" class="form-control" />
                <span asp-validation-for="NameOfTask" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDesc" class="control-label"></label>
                <input asp-for="ShortDesc" class="form-control" />
                <span asp-validation-for="ShortDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhoMade" class="control-label">Owner</label>
                <input asp-for="WhoMade" class="form-control" list="Users"/>
                <datalist id="Users">
                    <option value="@User.Identity.Name"/>
                </datalist>
                <span asp-validation-for="WhoMade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @ViewBag.message
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
